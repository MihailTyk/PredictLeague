@model IEnumerable<PredictLeague.Models.Match>
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@{
    ViewData["Title"] = "⚽ Matches";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="fw-bold text-primary">
            ⚽ Football Matches
        </h2>

        @if (User.IsInRole("Admin"))
        {
            <a asp-action="Create" class="btn btn-success">
                ➕ Add New Match
            </a>
        }
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success text-center">@TempData["Success"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger text-center">@TempData["Error"]</div>
    }

    <div class="table-responsive shadow-sm rounded">
        <table class="table table-hover align-middle text-center">
            <thead class="table-dark">
                <tr>
                    <th>🏠 Home</th>
                    <th>🆚 Away</th>
                    <th>🕒 Start Time</th>
                    <th>🏁 Result</th>
                    <th>🎯 Predictions</th>
                    @if (User.IsInRole("Admin"))
                    {
                        <th>⚙️ Actions</th>
                    }
                </tr>
            </thead>
            <tbody>
                @foreach (var match in Model)
                {
                    <tr>
                        <td class="fw-semibold">@match.HomeTeam</td>
                        <td class="fw-semibold">@match.AwayTeam</td>
                        <td>@match.StartTime.ToString("dd.MM.yyyy HH:mm")</td>
                        <td>
                            @if (match.IsFinished)
                            {
                                <span class="fw-bold text-success">
                                    @match.HomeScore - @match.AwayScore
                                </span>
                            }
                            else
                            {
                                <span class="text-muted">Upcoming</span>
                            }
                        </td>

                        <td>
                            <a asp-controller="Predictions"
                               asp-action="Create"
                               asp-route-matchId="@match.Id"
                               class="btn btn-sm btn-outline-primary">
                                🎯 Predict
                            </a>
                        </td>

                        @if (User.IsInRole("Admin"))
                        {
                            <td>
                                <a asp-action="Edit" asp-route-id="@match.Id" class="btn btn-sm btn-warning text-white">
                                    ✏️ Edit
                                </a>
                                <a asp-action="Details" asp-route-id="@match.Id" class="btn btn-sm btn-info text-white">
                                    👁️ Details
                                </a>
                                <a asp-action="Delete" asp-route-id="@match.Id" class="btn btn-sm btn-danger">
                                    🗑️ Delete
                                </a>
                            </td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
