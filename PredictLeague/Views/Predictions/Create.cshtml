@model PredictLeague.Models.Prediction
@inject PredictLeague.Data.PredictLeagueContext _context

@{
    ViewData["Title"] = "Make a Prediction";

    int matchId = 0;
    if (Model != null && Model.MatchId != 0)
    {
        matchId = Model.MatchId;
    }
    else if (ViewContext.RouteData.Values["matchId"] != null)
    {
        int.TryParse(ViewContext.RouteData.Values["matchId"].ToString(), out matchId);
    }

    var match = _context.Match.FirstOrDefault(m => m.Id == matchId);
}

<h1>Make a Prediction</h1>
<hr />

@if (match != null)
{
    <h3>Predict result for:</h3>
    <h4>@match.HomeTeam 🆚 @match.AwayTeam</h4>
}
else
{
    <h4 class="text-danger">Match not found</h4>
}

<div class="row mt-3">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="MatchId" value="@matchId" />

            <div class="form-group">
                <label asp-for="UserName" class="control-label">Your Name</label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PredictedHomeScore" class="control-label">@match?.HomeTeam Score</label>
                <input asp-for="PredictedHomeScore" class="form-control" type="number" />
                <span asp-validation-for="PredictedHomeScore" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PredictedAwayScore" class="control-label">@match?.AwayTeam Score</label>
                <input asp-for="PredictedAwayScore" class="form-control" type="number" />
                <span asp-validation-for="PredictedAwayScore" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Save Prediction" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-controller="Matches" asp-action="Index" class="btn btn-secondary">Back to Matches</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
