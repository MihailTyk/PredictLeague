@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<!DOCTYPE html>
<html lang="bg">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PredictLeague</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

    <style>
        body {
            background-color: #f5f6fa;
            font-family: 'Segoe UI', sans-serif;
        }

        /* 🔵 NAVBAR */
        .navbar {
            background: linear-gradient(90deg, #0b3d91, #1e90ff);
            box-shadow: 0 3px 8px rgba(0, 0, 0, 0.25);
        }

        .navbar-brand {
            color: #ffd700 !important;
            font-weight: 700;
            font-size: 1.5rem;
        }

            .navbar-brand:hover {
                color: #fff !important;
            }

        .nav-link {
            color: #f8f9fa !important;
            font-weight: 500;
        }

            .nav-link:hover {
                color: #ffd700 !important;
            }

        .dropdown-menu {
            border-radius: 0.5rem;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15);
        }

        /* ⚽ FOOTER */
        footer {
            background-color: #0b3d91;
            color: #dbe4ff;
            padding: 15px 0;
            margin-top: 50px;
        }

            footer a {
                color: #ffd700;
                text-decoration: none;
            }

                footer a:hover {
                    color: #fff;
                }

        /* 🟢 LOGIN BUTTONS */
        .btn-login {
            border: 1px solid #ffd700;
            color: #ffd700;
        }

            .btn-login:hover {
                background-color: #ffd700;
                color: #0b3d91;
            }

        .btn-register {
            background-color: #ffd700;
            color: #0b3d91;
            border: none;
        }

            .btn-register:hover {
                background-color: #fff200;
            }

        main {
            min-height: 70vh;
        }
    </style>
</head>

<body>

    <!-- ✅ NAVIGATION -->
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark mb-4">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">⚽ PredictLeague</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarContent" aria-controls="navbarContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">🏠 Начало</a>
                        </li>

                        <!-- ✅ Лиги -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="leaguesDropdown"
                               role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                🌍 Лиги
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="leaguesDropdown">
                                <li><a class="dropdown-item" asp-controller="Matches" asp-action="PremierLeague">🏴 Premier League</a></li>
                                <li><a class="dropdown-item" asp-controller="Matches" asp-action="LaLiga">🇪🇸 La Liga</a></li>
                                <li><a class="dropdown-item" asp-controller="Matches" asp-action="SerieA">🇮🇹 Serie A</a></li>
                                <li><a class="dropdown-item" asp-controller="Matches" asp-action="Bundesliga">🇩🇪 Bundesliga</a></li>
                                <li><a class="dropdown-item" asp-controller="Matches" asp-action="ChampionsLeague">🏆 Champions League</a></li>
                            </ul>
                        </li>

                        <!-- ✅ НОВИЯТ БУТОН ТУК!! -->
                        @if (SignInManager.IsSignedIn(User))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="MyPredictions" asp-action="Index">📋 Моите предикти</a>
                            </li>
                        }

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Privacy">🔒 Privacy</a>
                        </li>
                    </ul>

                    <!-- ✅ LOGIN / LOGOUT -->
                    <ul class="navbar-nav">
                        @if (SignInManager.IsSignedIn(User))
                        {
                            <li class="nav-item">
                                <span class="nav-link text-warning fw-semibold">
                                    👋 Здравей, @UserManager.GetUserName(User)!
                                </span>
                            </li>
                            <li class="nav-item">
                                <form class="d-inline" asp-area="Identity"
                                      asp-page="/Account/Logout" method="post">
                                    <button type="submit"
                                            class="btn btn-login btn-sm ms-2">
                                        Изход
                                    </button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="btn btn-login btn-sm me-2"
                                   asp-area="Identity" asp-page="/Account/Login">Вход</a>
                            </li>

                            <li class="nav-item">
                                <a class="btn btn-register btn-sm"
                                   asp-area="Identity" asp-page="/Account/Register">Регистрация</a>
                            </li>
                        }
                    </ul>

                </div>
            </div>
        </nav>
    </header>

    <!-- ✅ MAIN CONTENT -->
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- ✅ FOOTER -->
    <footer class="text-center">
        <div class="container">
            &copy; @DateTime.Now.Year - <strong>PredictLeague</strong> ⚽ | Всички права запазени
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
